{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@repo/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@repo/ai/*": [
        "../../packages/ai/src/*"
      ],
      "@repo/api-client/*": [
        "../../packages/api-client/src/*"
      ],
      "@repo/db/*": [
        "../../packages/db/src/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
