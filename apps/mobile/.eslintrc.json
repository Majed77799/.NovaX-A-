{
	"extends": ["eslint:recommended"],
	"env": { "es2022": true, "browser": true, "node": true, "commonjs": true },
	"parserOptions": { "ecmaVersion": 2022, "sourceType": "module" },
	"plugins": ["perfectionist"],
	"rules": {
		"no-unused-vars": "off",
		"perfectionist/sort-imports": ["warn", { "type": "natural", "order": "asc", "newlinesBetween": "always" }],
		"perfectionist/sort-objects": ["warn", { "type": "natural", "order": "asc" }]
	}
}