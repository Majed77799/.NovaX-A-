NODE_ENV=development
PORT=4000

# Comma-separated list; first is current signing/primary secret. Older secrets kept for verification during rotation
JWT_SECRETS=devsecret-current,devsecret-previous

# Comma-separated list of allowed origins
# Development defaults include common ports (Next:3000, Vite:5173)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourapp.vercel.app

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_PER_IP=100
RATE_LIMIT_MAX_PER_TOKEN=300

# Request size limits
REQUEST_JSON_LIMIT=100kb
REQUEST_URLENCODED_LIMIT=50kb

# Logging and audit
LOG_DIR=./logs
AUDIT_LOG_FILE=./logs/audit.log
CRASH_REPORTS_DIR=./logs/crash-reports

# Admin guard claim mapping
ADMIN_ROLE_CLAIM=role
ADMIN_ROLE_VALUE=admin