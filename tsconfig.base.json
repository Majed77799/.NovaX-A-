{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"isolatedModules": true,
		"strict": false,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"baseUrl": "."
	},
	"exclude": ["node_modules", "**/node_modules/*", "**/.next/*", "**/dist/*", "**/build/*"]
}