{
  "name": "novax-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "NovaX monorepo with mobile (Expo SDK 53), web (Next.js PWA), API (Express TS), and shared packages",
  "packageManager": "npm@10",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:all": "turbo run dev --parallel",
    "dev:mobile": "npm run start --workspace @novax/mobile",
    "dev:web": "npm run dev --workspace @novax/web",
    "dev:api": "npm run dev --workspace @novax/api",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "postinstall": "turbo run build --filter=./packages/* --no-deps || true"}
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "typescript-eslint": "^8.0.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.3.3",
    "turbo": "^2.0.6",
    "typescript": "~5.6.2"
  }
}